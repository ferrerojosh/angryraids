// Normalize browsers
@import 'normalize.styl'
// Import color configuration
@import 'colors.styl'

fonts = -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif

// No margin for html and body
html, body
  margin: 0
  padding: 0

// Use system fonts
body
  font-family: fonts
